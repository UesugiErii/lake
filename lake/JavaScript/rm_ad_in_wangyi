// You can ues this JavaScript in browser like via

function removeAD2(){var list=document.getElementsByTagName('article');for(var i=0;i<list.length;i++){var index_of_ad=list[i].childNodes[0].innerText.indexOf('广告');var index_of_follow=list[i].childNodes[0].innerText.indexOf('跟贴');if(index_of_ad!=-1&&index_of_follow==-1){list[i].setAttribute('style','display:none')}}};setInterval("removeAD2()","2000");